extends ../base
include ../mixins/video


block content
    div.profile__data
      if loggedInUser.avatarUrl==""
        div.avatar-card 
          img(src="https://i.pinimg.com/564x/34/c2/f9/34c2f984350ed23d1efa7094d7923c5a.jpg").avatar
      else
        div.avatar-card  
          img(src="/"+ user.avatarUrl, alt="").avatar
      h3=user.name
    div.video-grid
      each video in user.videos
        +video(video)
      else
        span.empty__message No videos found