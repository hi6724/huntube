extends base.pug

block content
    //- div
    //-     button#startBtn Start Recording 
    if errorMessage
        span=errorMessage
    form(method="POST",enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file",accept="video/*", required, id="video",name="video")
        label(for="thumb") Thumbnail File 
        input(type="file",accept="image/*", required, id="thumb",name="thumb")
        input(type="text",name="title",placeholder="Title",required,maxlength=80)
        input(type="text",name="description",placeholder="Description",required,)
        input(type="text",name="hashtags",placeholder="Hashtags,separated by comma",required)   
        input(type="submit",value="Upload Video")
block scripts
    script(src="/static/js/recorder.js") 